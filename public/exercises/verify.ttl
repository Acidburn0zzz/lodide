    lodide:taskSolutionCodeCurrent "var triples = g.toArray();\nif (triples.length != 1) {\n\talert(\"Input graph must be exactly one triple\");\n    throw \"wrong size\";\n}\nvar triple = triples[0];\nvar subject = triple.subject;\nvar baseURI = subject.toString().split(\"#\")[0];\nstore.match(null,null,null,baseURI).then(function(subjectDescriptionGraph) {\n  var found = false;\n  subjectDescriptionGraph.forEach(function(t) {\n    if ((t.subject.equals(triple.subject)) \n        && (t.predicate.equals(triple.predicate))\n        && (t.object.equals(triple.object))) {\n        \tfound = true;\n        }\n  });\n  if (found) {\n  \talert(\"Your statement is true based on information found on \"+baseURI);\n  } else {\n    alert(\"Sorry, we couln't confirm your statement!\");\n  }\n});\n".
